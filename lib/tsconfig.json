{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "skipLibCheck": true,

        "outDir": "dist",

        "moduleResolution": "node",
        "isolatedModules": true,
        "noEmit": false,

        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,

        "declaration": true
    },
    "include": ["src"]
}
